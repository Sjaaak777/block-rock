{
  "name": "block-rock",
  "productName": "Block Rock",
  "version": "1.0.0",
  "description": "Shoot some space rocks",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build-installer": "electron-builder"
  },
  "build": {
    "appId": "block-rock",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/icon.ico"
    },
    "nsis": {
      "installerIcon": "src/icon.ico",
      "uninstallerIcon": "src/icon.ico",
      "uninstallDisplayName": "Block Rock",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^19.0.4",
    "electron-builder": "^23.0.3"
  },
  "dependencies": {}
}